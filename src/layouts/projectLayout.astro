---
import Star from "../components/star";
import NavBar from "../components/navbar.astro";
import TechIcon from "../components/techIcon.astro";
import { Image } from "astro:assets";

import gh from "../images/contact/gh.webp";

import type { MarkdownLayoutProps } from "astro";
import type ProjectFrontmatter from "../interfaces/ProjectFrontmatter";

type Props = MarkdownLayoutProps<ProjectFrontmatter>;

const { frontmatter } = Astro.props;
const stars = Array(100).fill(null);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Samuel Fernandez</title>

    <style is:global>
      @font-face {
        font-family: "Dosis";
        src: url("/fonts/Dosis.ttf") format("truetype");
      }
      @font-face {
        font-family: "Space Grotesk";
        src: url("/fonts/SpaceGrotesk.ttf") format("truetype");
      }
    </style>
  </head>
  <body class="text-white dark:bg-bgc">
    <div class="relative">
      {stars.map(() => <Star client:load />)}
    </div>
    <NavBar />
    <main class="m-5 flex flex-col items-center justify-start bg-black md:m-10">
      <div class="flex w-full flex-col items-center justify-start">
        <div class="flex flex-col items-center justify-start">
          <h2 class="font-space-grotesk text-4xl md:text-5xl lg:text-6xl">
            {frontmatter.name}
          </h2>
          <div class="flex w-5/6 flex-row items-center justify-center">
            <Image
              src={gh}
              alt="The GitHub logo"
              class="mx-1 h-7 w-7 rounded-full border-2 border-black bg-white md:mx-2"
            />
            <a
              class="text-blue-400 text-center text-lg underline md:text-xl lg:text-2xl"
              href={frontmatter.repo}>{frontmatter.repo}</a
            >
          </div>
          <p class="my-5 text-center text-3xl">{frontmatter.description}</p>
          <div class="flex flex-row flex-wrap items-center justify-center">
            {frontmatter.stack.map((tech) => <TechIcon name={tech} />)}
          </div>
        </div>
      </div>
      <div
        class="mt-10 flex w-full flex-col items-start justify-start border-2 border-border bg-bgc p-5 text-3xl [filter:drop-shadow(5px_5px_20px_rgba(255,255,255,0.25))] md:w-5/6 md:px-10">
        <img
          src={`/images/projectImages/${frontmatter.name}.webp`}
          class="mb-5 w-full self-center md:w-[calc(100vw/2)]"
        />
        <slot />
      </div>
    </main>
  </body>
</html>
