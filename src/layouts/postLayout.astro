---
import BaseLayout from "./baseLayout.astro";

import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"posts">;
};

const { entry }: Props = Astro.props;
---

<BaseLayout>
  <meta
    name="description"
    content={`Blog from Samuel Fernandez: ${entry.data.name}'`}
    slot="metadata"
  />
  <main class="m-5 flex flex-col items-center justify-start bg-black md:m-10">
    <div class="z-20 flex w-full flex-col items-center justify-start">
      <h2 class="font-space-grotesk text-4xl md:text-5xl lg:text-6xl">
        {entry.data.name}
      </h2>
      <p class="my-5 text-center text-3xl">
        {entry.data.date.toDateString()} â€¢ {entry.data.readingTime} minute read
      </p>
    </div>
    <div
      class="content z-20 mt-10 flex w-full flex-col items-start justify-start border-2 border-border bg-bgc p-5 text-xl [filter:drop-shadow(5px_5px_20px_rgba(255,255,255,0.25))] md:w-5/6 md:px-10 lg:text-2xl">
      <div class="mx-3 w-full md:mx-20 lg:mx-40">
        <slot />
      </div>
    </div>
  </main>
</BaseLayout>
