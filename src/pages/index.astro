---
import Star from '../components/star';
import NavBar from '../components/navbar.astro';
import About from '../components/about.astro';
import Projects from '../components/projects.astro';
import Contact from '../components/contact.astro';

const stars = Array(100).fill(null);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Samuel Fernandez</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@400&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/8779c4d8c1.js" crossorigin="anonymous"></script>
  </head>
  <body class="dark:bg-bgc text-white">
    <div class="relative">
      {
        stars.map(() => <Star client:load />)
      }
    </div>
    <NavBar />
    <About />
    <Projects />
    <Contact />
  </body>
</html>
