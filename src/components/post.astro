---
import type { CollectionEntry } from "astro:content";

interface Props {
  blog: CollectionEntry<"posts">;
}

const { blog: blog } = Astro.props;
const colors = [
  "orange",
  "green",
  "blue",
  "purple",
  "red",
  "dark-green",
  "yellow",
];

const color = colors[Math.floor(Math.random() * colors.length)];
---

<a
  href={`/blog/${blog.slug}`}
  class={`w-full bg-${color} transition-all duration-300 hover:[filter:drop-shadow(5px_5px_5px_theme('colors.${color}-border'))] border-4 border-${color}-border m-2 flex flex-col items-start justify-start rounded-lg p-2 text-black lg:p-5`}>
  <div class="flex w-full flex-row items-center justify-between">
    <p class="text-center text-4xl">{blog.data.name}</p>
    <p class="text-center text-3xl">
      {new Date(blog.data.date).toDateString()}
    </p>
  </div>
  <p class="mt-5 text-center text-2xl">{blog.data.preview}</p>
</a>
